        <ImageBrush ImageSource="res/up.png" x:Key="up" />
        <ImageBrush ImageSource="res/down.png" x:Key="down" />
        <ImageBrush ImageSource="res/zero.png" x:Key="zero" />
        
        <ImageBrush ImageSource="res/diagram_64.png" x:Key="diagram" />
        <ImageBrush ImageSource="res/Favorites_256x256.png" x:Key="FavStar" />
        <ImageBrush ImageSource="res/Product-documentation256.png" x:Key="Doc" />
        <ImageBrush ImageSource="res/Text.png" x:Key="Text" />
        <ImageBrush ImageSource="res/wallet_64.png" x:Key="Portfel" />
        <ImageBrush ImageSource="res/Calendar_256x256.png" x:Key="cal" />
        <ImageBrush ImageSource="res/Blueprint.png" x:Key="analizy" />
        <ImageBrush ImageSource="res/chat.png" x:Key="chat" />
        <ImageBrush ImageSource="res/Settings_256x256.png" x:Key="settings" />
        <ImageBrush ImageSource="res/Information_256x256.png" x:Key="info" />
        <ImageBrush ImageSource="res/statistics_64.png" x:Key="stats" />
        <ImageBrush ImageSource="res/circle-check.png" x:Key="ok" />
        <ImageBrush ImageSource="res/Refresh_256x256.png" x:Key="refresh" />
        <ImageBrush ImageSource="res/save_64.png" x:Key="pobierz" />
        <ImageBrush ImageSource="res/Delete_256x256.png" x:Key="del" />
        
        <Style x:Key="rectStyle" TargetType="Rectangle">
            <Setter Property="Height" Value="20" />
            <Setter Property="Width" Value="20" />
        </Style>
        
        <Style x:Key="tbox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFE8DFDF" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        </Style>

        <!--template dla głównego tabcontrola-->
        <ControlTemplate x:Key="tabTemp" TargetType="{x:Type TabItem}">
            <Border Height="auto" Name="Ramka" Width="Auto" CornerRadius="2" Background="Black" BorderThickness="2" Margin="4,1" BorderBrush="#FF050563">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Margin="2" Height="30" Width="30" Name="RectPic" Stretch="Fill" />
                    <Label Name="lTytul" Content="{TemplateBinding Header}" Foreground="White" />
                </StackPanel>
            </Border>
            
            <ControlTemplate.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter TargetName="Ramka" Property="Background" Value="DarkGray" />
                    <Setter TargetName="Ramka" Property="BorderBrush" Value="Yellow" />
                    <Setter TargetName="lTytul" Property="Foreground" Value="Black" />
                    <Setter TargetName="lTytul" Property="FontWeight" Value="Bold" />
                </Trigger>
                
                <Trigger Property="Header" Value="Podsumowanie">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource Doc}" />
                </Trigger>
                <Trigger Property="Header" Value="Akcje">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource diagram}" />
                </Trigger>
                <Trigger Property="Header" Value="Indeksy">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource diagram}" />
                </Trigger>
                <Trigger Property="Header" Value="Waluty i towary">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource diagram}" />
                </Trigger>
                <Trigger Property="Header" Value="Ulubione">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource FavStar}" />
                </Trigger>
                <Trigger Property="Header" Value="Log">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource Text}" />
                </Trigger>
                <Trigger Property="Header" Value="Portfel">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource Portfel}" />
                </Trigger>
                <Trigger Property="Header" Value="Makro">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource cal}" />
                </Trigger>
                <Trigger Property="Header" Value="Analizy">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource analizy}" />
                </Trigger>
                <Trigger Property="Header" Value="Wiadomości">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource chat}" />
                </Trigger>
                <Trigger Property="Header" Value="Opcje">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource settings}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <!--template dla małych tabów-->
        <ControlTemplate x:Key="tabTemp2" TargetType="{x:Type TabItem}">
            <Border Height="auto" Name="Ramka" Width="Auto" CornerRadius="2" Background="Black" BorderBrush="#FF050563" BorderThickness="2" Margin="1">
                <Label Content="{TemplateBinding Header}" Name="lTytul" Foreground="White" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter TargetName="Ramka" Property="Background" Value="DarkGray" />
                    <Setter TargetName="Ramka" Property="BorderBrush" Value="Yellow" />
                    <Setter TargetName="lTytul" Property="Foreground" Value="Black" />
                    <Setter TargetName="lTytul" Property="FontWeight" Value="Bold" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Labele -->
        <Style x:Key="labelTytul_Main" TargetType="Label">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style x:Key="labelDane_Main" TargetType="Label">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style x:Key="labelTytul" TargetType="Label" BasedOn="{StaticResource labelTytul_Main}">
            <Setter Property="FontSize" Value="15" />
        </Style>
        <Style x:Key="labelDane" TargetType="Label" BasedOn="{StaticResource labelDane_Main}">
            <Setter Property="FontSize" Value="11" />
        </Style>

        <Style x:Key="labelTytul2" TargetType="Label" BasedOn="{StaticResource labelTytul_Main}">
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style x:Key="labelDane2" TargetType="Label" BasedOn="{StaticResource labelDane_Main}">
            <Setter Property="FontSize" Value="15" />
        </Style>

        <!-- Reszta -->
        <Style x:Key="ramkiDolInfo" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Width" Value="178" />
            <Setter Property="Margin" Value="1,0,0,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style x:Key="Grid" TargetType="DataGrid">
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="AlternatingRowBackground" Value="Khaki" />
            <Setter Property="AutoGenerateColumns" Value="True" />
            <Setter Property="CanUserSortColumns" Value="False" />
            <Setter Property="FontWeight" Value="Normal" />
        </Style>
        <Style x:Key="gB_Main" TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Height" Value="130" />
            <Setter Property="Margin" Value="3,0,3,0" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="groupBoxSpadki" TargetType="GroupBox" BasedOn="{StaticResource gB_Main}">
            <Setter Property="Background" Value="Red" />
        </Style>
        <Style x:Key="groupBoxWzrosty" TargetType="GroupBox" BasedOn="{StaticResource gB_Main}">
            <Setter Property="Background" Value="LawnGreen" />
        </Style>
        <Style x:Key="groupBoxNajaktywniejsze" TargetType="GroupBox" BasedOn="{StaticResource gB_Main}">
            <Setter Property="Background" Value="SkyBlue" />
        </Style>
        <Style x:Key="scroll" TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
        </Style>
        <Style x:Key="znaczekDol" TargetType="Rectangle">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Width" Value="48" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="120,65,0,0" />
        </Style>
        <Style x:Key="znaczekBokInfo" TargetType="Rectangle">
            <Setter Property="Height" Value="85"/>
            <Setter Property="Width" Value="85" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="246,65,0,0" />
        </Style>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Margin" Value="2" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />   
        </Style>
        <Style x:Key="ramkaPodsumowanie" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Margin" Value="2" />
