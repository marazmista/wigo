<Window x:Class="mm_gielda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontFamily="Verdana" FontSize="10"
        Title="WIGO - Polska Giełda" Height="562" Width="1087" Background="#FF646464" Initialized="Window_Initialized" Icon="/Wigo;component/wigoIco.ico">
    <Window.Resources>

