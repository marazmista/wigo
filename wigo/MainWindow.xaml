<Window x:Class="mm_gielda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontFamily="Verdana" FontSize="10"
        Title="WIGO - Polska Giełda" Height="562" Width="1087" Background="#FF646464" Initialized="Window_Initialized">
    <Window.Resources>

        <!--ikonki obrazki-->
        <ImageBrush ImageSource="res/up.png" x:Key="up" />
        <ImageBrush ImageSource="res/down.png" x:Key="down" />
        <ImageBrush ImageSource="res/zero.png" x:Key="zero" />
        
        <ImageBrush ImageSource="res/diagram_64.png" x:Key="diagram" />
        <ImageBrush ImageSource="res/Favorites_256x256.png" x:Key="FavStar" />
        <ImageBrush ImageSource="res/Product-documentation256.png" x:Key="Doc" />
        <ImageBrush ImageSource="res/Text.png" x:Key="Text" />
        <ImageBrush ImageSource="res/wallet_64.png" x:Key="Portfel" />
        <ImageBrush ImageSource="res/Calendar_256x256.png" x:Key="cal" />
        <ImageBrush ImageSource="res/Blueprint.png" x:Key="analizy" />
        <ImageBrush ImageSource="res/chat.png" x:Key="chat" />
        <ImageBrush ImageSource="res/Settings_256x256.png" x:Key="settings" />
        <ImageBrush ImageSource="res/Information_256x256.png" x:Key="info" />
        <ImageBrush ImageSource="res/statistics_64.png" x:Key="stats" />
        <ImageBrush ImageSource="res/circle-check.png" x:Key="ok" />
                
        <!-- Motywy zakładek-->       
        <Style x:Key="taby2" TargetType="TabItem">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="Gray" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Margin" Value="-2,2,2,-2" />
        </Style>
        
        <Style x:Key="rectStyle" TargetType="Rectangle">
            <Setter Property="Height" Value="20" />
            <Setter Property="Width" Value="20" />
        </Style>
        
        <Style x:Key="tbox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFE8DFDF" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        </Style>
        
        <ControlTemplate x:Key="tabTemp" TargetType="{x:Type TabItem}">
            <Border Height="auto" Name="Ramka" Width="Auto" CornerRadius="2" Background="Black" BorderBrush="Gray" BorderThickness="2" Margin="4,1">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Margin="2" Height="30" Width="30" Name="RectPic" Stretch="Fill" />
                    <Label Name="lTytul" Content="{TemplateBinding Header}" Foreground="White" />
                </StackPanel>
            </Border>
            
            <ControlTemplate.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter TargetName="Ramka" Property="Background" Value="DarkGray" />
                    <Setter TargetName="Ramka" Property="BorderBrush" Value="Yellow" />
                    <Setter TargetName="lTytul" Property="Foreground" Value="Black" />
                    <Setter TargetName="lTytul" Property="FontWeight" Value="Bold" />
                </Trigger>
                
                <Trigger Property="Header" Value="Podsumowanie">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource Doc}" />
                </Trigger>
                <Trigger Property="Header" Value="Akcje">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource diagram}" />
                </Trigger>
                <Trigger Property="Header" Value="Indeksy">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource diagram}" />
                </Trigger>
                <Trigger Property="Header" Value="Waluty i towary">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource diagram}" />
                </Trigger>
                <Trigger Property="Header" Value="Ulubione">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource FavStar}" />
                </Trigger>
                <Trigger Property="Header" Value="Log">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource Text}" />
                </Trigger>
                <Trigger Property="Header" Value="Portfel">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource Portfel}" />
                </Trigger>
                <Trigger Property="Header" Value="Makro">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource cal}" />
                </Trigger>
                <Trigger Property="Header" Value="Analizy">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource analizy}" />
                </Trigger>
                <Trigger Property="Header" Value="Wiadomości">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource chat}" />
                </Trigger>
                <Trigger Property="Header" Value="Opcje">
                    <Setter TargetName="RectPic" Property="Fill" Value="{StaticResource settings}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
                
        <!-- Labele -->
        
        <Style x:Key="labeltytul" TargetType="Label">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style x:Key="labeldane" TargetType="Label">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />            
        </Style>

        <Style x:Key="labeltytul2" TargetType="Label">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style x:Key="labeldane2" TargetType="Label">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>

        <!-- Reszta -->
        <Style x:Key="ramki" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Width" Value="178" />
            <Setter Property="Margin" Value="1,0,0,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style x:Key="grid" TargetType="DataGrid">
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="AlternatingRowBackground" Value="Khaki" />
            <Setter Property="AutoGenerateColumns" Value="True" />
        </Style>
        <Style x:Key="groupboxglowny" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Height" Value="auto" />
            <Setter Property="Margin" Value="2,0,2,0" />
        </Style>
        <Style x:Key="groupboxspadki" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="Red" />
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Height" Value="130" />
            <Setter Property="Margin" Value="3,0,3,0" />
            <Setter Property="FontWeight" Value="Light" />
        </Style>
        <Style x:Key="groupboxwzrosty" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="LawnGreen" />
            <Setter Property="Foreground" Value="LawnGreen" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Height" Value="130" />
            <Setter Property="Margin" Value="3,0,3,0" />
            <Setter Property="FontWeight" Value="Light" /> 
        </Style>
        <Style x:Key="groupboxnajaktywniejsze" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="SkyBlue" />
            <Setter Property="Foreground" Value="Skyblue" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Height" Value="130" />
            <Setter Property="Margin" Value="3,0,3,0" />
            <Setter Property="FontWeight" Value="Light" />
        </Style>
        <Style x:Key="scroll" TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
        </Style>
        <Style x:Key="znaczekDol" TargetType="Rectangle">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Width" Value="48" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="120,65,0,0" />
        </Style>
        <Style x:Key="znaczekBokInfo" TargetType="Rectangle">
            <Setter Property="Height" Value="85"/>
            <Setter Property="Width" Value="85" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="246,65,0,0" />
        </Style>
        
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Margin" Value="2" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />   
        </Style>

    </Window.Resources>

    <DockPanel>
        <!-- Dolne informacje  --> 
        <StackPanel DockPanel.Dock="Bottom" Height="120" Orientation="Horizontal">
           <Border Style="{StaticResource ramki}" Name="wigborder" Margin="2,0,0,0">
                <Grid Name="wiggrid" Margin="0">
                    <Label Content="WIG" Name="wigl" Width="60" Style="{StaticResource labeltytul}" Height="29" />
                    <Label Content="Kurs" Margin="0,20,0,71" Name="wigkursl" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="+2,8%"  Margin="107,27,0,0" Name="wigprocentl" Style="{StaticResource labeldane}"  FontWeight="Bold" FontSize="12" />
                    <Label Content="28" Margin="107,40,0,0" Name="wigzmianal" Style="{StaticResource labeldane}" FontWeight="Bold" FontSize="12" />
                    <Label Content="Otwarcie" Margin="0,40,0,0" Name="wigotwl" Style="{StaticResource labeldane}" />
                    <Label Content="Odniesienie" Height="28" Margin="0,56,0,0" Name="wigodnl" Style="{StaticResource labeldane}" Width="80" />
                    <Label Content="Wolumen" Height="28" Margin="0,93,0,0" Name="wigwoll" Style="{StaticResource labeldane}" />
                    <Label Content="Obrót" Height="28" Margin="0,78,0,0" Name="wigobrl" Style="{StaticResource labeldane}" Width="55" />
                    <Label Content="17:20" Height="28"  Margin="130,-2,0,0" Name="wiggodzl" Style="{StaticResource labeldane}" />
                    <Rectangle Name="wigRect" Style="{StaticResource znaczekDol}" />
                </Grid>
            </Border>
            <Border Style="{StaticResource ramki}" Name="wig20border">
                <Grid Name="wig20grid">
                    <Label Content="WIG20" Name="wig20l" Width="80" Style="{StaticResource labeltytul}" Height="29"  />
                    <Label Content="Kurs" Margin="0,20,0,71" Name="wig20kursl" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="+2,8%" Margin="107,27,0,0" Name="wig20procentl" Style="{StaticResource labeldane}"  FontWeight="Bold" FontSize="12" />
                    <Label Content="28" Margin="107,40,0,0" Name="wig20zmianal"  Style="{StaticResource labeldane}" FontWeight="Bold" FontSize="12" />
                    <Label Content="Otwarcie" Margin="0,40,0,0" Name="wig20otwl" Style="{StaticResource labeldane}" />
                    <Label Content="Odniesienie" Height="28" Margin="0,56,0,0" Name="wig20odnl" Style="{StaticResource labeldane}" Width="80" />
                    <Label Content="Wolumen" Height="28" Margin="0,93,0,0" Name="wig20woll"  Style="{StaticResource labeldane}" />
                    <Label Content="Obrót" Height="28"  Margin="0,78,0,0" Name="wig20obrl" Style="{StaticResource labeldane}" Width="55" />
                    <Label Content="17:20" Height="28" Margin="130,-2,0,0" Name="wig20godzl" Style="{StaticResource labeldane}" />
                    <Rectangle Name="wig20Rect" Style="{StaticResource znaczekDol}" />
                </Grid>
            </Border>
            <Border Style="{StaticResource ramki}" Name="mwigborder">
                <Grid Name="mwiggrid">
                    <Label Content="mWIG40"  Name="mwigl" Width="88" Style="{StaticResource labeltytul}" Height="29" />
                    <Label Content="Kurs" Margin="0,20,0,71" Name="mwigkursl" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="+2,8%" Margin="107,27,0,0" Name="mwigprocentl" Style="{StaticResource labeldane}"  FontWeight="Bold" FontSize="12" />
                    <Label Content="28"  Margin="107,40,0,0" Name="mwigzmianal" Style="{StaticResource labeldane}" FontWeight="Bold" FontSize="12" />
                    <Label Content="Otwarcie" Margin="0,40,0,0" Name="mwigotwl"  Style="{StaticResource labeldane}" />
                    <Label Content="Odniesienie" Height="28" Margin="0,56,0,0" Name="mwigodnl"  Style="{StaticResource labeldane}" Width="80" />
                    <Label Content="Wolumen" Height="28" Margin="0,93,0,0" Name="mwigwoll" Style="{StaticResource labeldane}" />
                    <Label Content="Obrót" Height="28"  Margin="0,78,0,0" Name="mwigobrl" Style="{StaticResource labeldane}" Width="55" />
                    <Label Content="17:20" Height="28" Margin="130,-2,0,0" Name="mwiggodzl"  Style="{StaticResource labeldane}" />
                    <Rectangle Name="mwigRect" Style="{StaticResource znaczekDol}" />
                </Grid>
            </Border>
            <Border Style="{StaticResource ramki}" Name="swigborder">
                <Grid Name="swiggrid">
                    <Label Content="sWIG80" Name="swigl" Width="80" Style="{StaticResource labeltytul}" Height="29" />
                    <Label Content="Kurs" Margin="0,20,0,71" Name="swigkursl" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="+2,8%" Margin="107,27,0,0" Name="swigprocentl" Style="{StaticResource labeldane}" FontWeight="Bold" FontSize="12" />
                    <Label Content="28"  Margin="107,40,0,0" Name="swigzmianal"  Style="{StaticResource labeldane}" FontWeight="Bold" FontSize="12" />
                    <Label Content="Otwarcie" Margin="0,40,0,0" Name="swigotwl" Style="{StaticResource labeldane}" />
                    <Label Content="Odniesienie" Height="28"  Margin="0,56,0,0" Name="swigodnl" Style="{StaticResource labeldane}" Width="80" />
                    <Label Content="Wolumen" Height="28" Margin="0,93,0,0" Name="swigwoll"  Style="{StaticResource labeldane}" />
                    <Label Content="Obrót" Height="28"  Margin="0,78,0,0" Name="swigobrl" Style="{StaticResource labeldane}" Width="55" />
                    <Label Content="17:20" Height="28"  Margin="130,-2,0,0" Name="swiggodzl" Style="{StaticResource labeldane}" />
                    <Rectangle Name="swigRect" Style="{StaticResource znaczekDol}" />
                </Grid>
            </Border>
            <Border Style="{StaticResource ramki}" Width="80" Name="eurplnborder">
                <Grid Name="eurplngrid">
                    <Label Content="EURPLN"  Name="eurplnl" Style="{StaticResource labeltytul}" FontSize="12" />
                    <Label Content="0.0000" Margin="0,15,0,71" Name="eurplnkursl" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="18:25" Margin="24,27,0,0" Name="eurplngodzl" Style="{StaticResource labeldane}"  />
                    <Label Content="+0.00%" Margin="0,44,0,0" Name="eurplnprocentl" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="0.0000" Margin="0,58,0,0" Name="eurplnzmianal" Style="{StaticResource labeldane}"  FontWeight="Bold" />
                    <Label Content="0.0000" Margin="0,93,0,0" Name="eurplnotwarciel" Style="{StaticResource labeldane}" />
                    <Label Content="0.0000" Margin="0,78,0,0" Name="eurplnodniesieniel" Style="{StaticResource labeldane}" />
                </Grid>
            </Border>
            <Border Style="{StaticResource ramki}" Width="80" Name="usdplnborder">
                <Grid Name="usdplngrid">
                    <Label Content="USDPLN"  Name="usdplnl" Style="{StaticResource labeltytul}"  FontSize="12" />
                    <Label Content="0.0000" Margin="0,15,0,71" Name="usdplnkursl" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="18:25" Margin="24,27,0,0" Name="usdplngodzl" Style="{StaticResource labeldane}" />
                    <Label Content="+0.00%" Margin="0,44,0,0" Name="usdplnprocentl" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="0.0000" Margin="0,58,0,0" Name="usdplnzmianal" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="0.0000" Margin="0,93,0,0" Name="usdplnotwarciel" Style="{StaticResource labeldane}" />
                    <Label Content="0.0000" Margin="0,78,0,0" Name="usdplnodniesieniel" Style="{StaticResource labeldane}" />
                </Grid>
            </Border>
            <Border Style="{StaticResource ramki}" Width="80" Name="eurusdborder">
                <Grid Name="eurusdgrid">
                    <Label Content="EURUSD" Name="eurusdl" Style="{StaticResource labeltytul}" FontSize="12" />
                    <Label Content="0.0000" Margin="0,15,0,71" Name="eurusdkursl" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="18:25" Margin="24,27,0,0" Name="eurusdgodzl" Style="{StaticResource labeldane}" />
                    <Label Content="+0.00%" Margin="0,44,0,0" Name="eurusdprocentl" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="0.0000" Margin="0,58,0,0" Name="eurusdzmianal" Style="{StaticResource labeldane}" FontWeight="Bold" />
                    <Label Content="0.0000" Margin="0,93,0,0" Name="eurusdotwarciel" Style="{StaticResource labeldane}" />
                    <Label Content="0.0000" Margin="0,78,0,0" Name="eurusdodniesieniel" Style="{StaticResource labeldane}" />
                </Grid>
            </Border>
        </StackPanel>
        <!--Dolnie koniec-->

        
        <TabControl DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" Name="tabControl1" VerticalAlignment="Stretch" TabStripPlacement="Left" Background="#FF868686" Foreground="White" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="4" BorderThickness="0">
            <TabItem Header="Podsumowanie" Template="{StaticResource tabTemp}">
                <ScrollViewer>
                    <WrapPanel Margin="2,0,0,0">
                        <GroupBox Header="Akcje GPW" Style="{StaticResource groupboxglowny}">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <GroupBox Header="Wzrosty"  Style="{StaticResource groupboxwzrosty}">
                                    <DataGrid Style="{StaticResource grid}" Name="akcjeGPWWzrostyGrid" />
                                </GroupBox>
                                <GroupBox Header="Spadki" Style="{StaticResource groupboxspadki}">
                                    <DataGrid Style="{StaticResource grid}" Name="akcjeGPWSpadkiGrid" />
                                </GroupBox>
                                <GroupBox Header="Najaktywniejsze" Style="{StaticResource groupboxnajaktywniejsze}" >
                                    <DataGrid Style="{StaticResource grid}" Name="akcjeGPWNajaktywniejszeGrid" />
                                </GroupBox>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="WIG" Style="{StaticResource groupboxglowny}">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <GroupBox Header="Wzrosty"  Style="{StaticResource groupboxwzrosty}">
                                    <DataGrid Style="{StaticResource grid}" Name="wigWzrostyGrid" />
                                </GroupBox>
                                <GroupBox Header="Spadki" Style="{StaticResource groupboxspadki}">
                                    <DataGrid Style="{StaticResource grid}" Name="wigSpadkiGrid" />
                                </GroupBox>
                                <GroupBox Header="Najaktywniejsze" Style="{StaticResource groupboxnajaktywniejsze}" >
                                    <DataGrid Style="{StaticResource grid}" Name="wigNajaktywniejszeGrid" />
                                </GroupBox>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="WIG20" Style="{StaticResource groupboxglowny}" >
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <GroupBox Header="Wzrosty" Style="{StaticResource groupboxwzrosty}">
                                    <DataGrid Style="{StaticResource grid}" Name="wig20WzrostyGrid" />
                                </GroupBox>
                                <GroupBox Header="Spadki" Style="{StaticResource groupboxspadki}">
                                    <DataGrid Style="{StaticResource grid}" Name="wig20SpadkiGrid" />
                                </GroupBox>
                                <GroupBox Header="Najaktywniejsze" Style="{StaticResource groupboxnajaktywniejsze}" >
                                    <DataGrid Style="{StaticResource grid}" Name="wig20NajaktywniejszeGrid" />
                                </GroupBox>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="mWIG40"  Style="{StaticResource groupboxglowny}">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <GroupBox Header="Wzrosty" Style="{StaticResource groupboxwzrosty}">
                                    <DataGrid Style="{StaticResource grid}" Name="mwig40WzrostyGrid" />
                                </GroupBox>
                                <GroupBox Header="Spadki" Style="{StaticResource groupboxspadki}">
                                    <DataGrid Style="{StaticResource grid}" Name="mwig40SpadkiGrid" />
                                </GroupBox>
                                <GroupBox Header="Najaktywniejsze" Style="{StaticResource groupboxnajaktywniejsze}" >
                                    <DataGrid Style="{StaticResource grid}" Name="mwig40NajaktywniejszeGrid" />
                                </GroupBox>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="sWIG80" Style="{StaticResource groupboxglowny}">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <GroupBox Header="Wzrosty" Style="{StaticResource groupboxwzrosty}">
                                    <DataGrid Style="{StaticResource grid}" Name="swig80WzrostyGrid" />
                                </GroupBox>
                                <GroupBox Header="Spadki" Style="{StaticResource groupboxspadki}">
                                    <DataGrid Style="{StaticResource grid}" Name="swig80SpadkiGrid" />
                                </GroupBox>
                                <GroupBox Header="Najaktywniejsze" Style="{StaticResource groupboxnajaktywniejsze}" >
                                    <DataGrid Style="{StaticResource grid}" Name="swig80NajaktywniejszeGrid" />
                                </GroupBox>
                            </StackPanel>
                        </GroupBox>
                    </WrapPanel>    
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Indeksy" Template="{StaticResource tabTemp}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="360" />
                    </Grid.ColumnDefinitions>
                    <TabControl Grid.Column="0" Background="#FF868686" Foreground="White" BorderThickness="0">
                        <TabItem Header="GPW" Style="{StaticResource ResourceKey=taby2}">
                                <ScrollViewer  Style="{StaticResource ResourceKey=scroll}">
                                    <DataGrid Name="indeksyGPWGrid" Style="{StaticResource grid}" DataGridCell.Selected="indeksyGPWGrid_Selected" />
                                </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Światowe" Style="{StaticResource ResourceKey=taby2}">
                                <ScrollViewer  Style="{StaticResource ResourceKey=scroll}">
                                    <DataGrid Name="indeksyGrid" Style="{StaticResource grid}" DataGridCell.Selected="indeksyGrid_Selected" />
                                </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Futures" Style="{StaticResource ResourceKey=taby2}">
                                <ScrollViewer  Style="{StaticResource ResourceKey=scroll}">
                                    <DataGrid Name="indeksyFutGrid" Style="{StaticResource grid}" DataGridCell.Selected="indeksyFutGrid_Selected" />
                                </ScrollViewer>
                        </TabItem>
                    </TabControl>
                    <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Left" />
                    <ScrollViewer Margin="3,0,0,0" Grid.Column="1" Style="{StaticResource ResourceKey=scroll}">
                        <StackPanel>                            
                            <Label Content="Szczegóły wybranego obiektu" Height="28" HorizontalAlignment="Left" Margin="59,2,0,0" VerticalAlignment="Top" FontSize="14" FontStyle="Normal" FontWeight="Bold" />
                            <Separator Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Top" />

                            <Expander>
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal" >
                                        <Rectangle Fill="{StaticResource settings}" Style="{StaticResource rectStyle}" />
                                        <Label Content="Opcje" />
                                    </StackPanel>
                                </Expander.Header>
                                <StackPanel>
                                    <Button Content="Dodaj do ulubionych" />
                                    <Button Content="Przejdź to AT" />
                                </StackPanel>
                            </Expander>

